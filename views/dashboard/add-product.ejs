<script>


    $(document).ready(function () {
        $('#addProductBtn').click(function () {
            var formData = new FormData($('#addProductForm')[0]);

            $.ajax({
                type: 'POST',
                url: '/add-product',
                data: formData,
                processData: false,
                contentType: false,
                success: function(res){
                    Swal.fire({
                        icon: "success",
                        title: "Success",
                        text: "Product added to cart successfully"
                    }).then(()=>{
                        location.reload()
                    })
                },
                error: function(err){
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Failed to add product to cart"
                    });
                }
            });
        });
    });
</script>

