    background-color: #f9f9f9;
    width: 200px;
    z-index: 1;
}

.mega-menu-content .column {
    float: left;
    width: 50%;
}

.mega-menu-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.mega-menu-content a:hover {
    background-color: #ddd;
}

.mega-menu:hover .mega-menu-content {
    display: block;
}

