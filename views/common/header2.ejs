<script>
  $(document).ready(function() {
function loadCartCount() {
  if ($(window).width() > 768) {
    $.ajax({
      url: '/card_count',
      method: 'POST',
      success: function(res) {
      
        
        $('#cart_count').text(res[0].cart_count);
      
      },
      error: function(err) {
        console.error('AJAX error:', err); 
      }
    });
  }
}

loadCartCount();  

$(window).resize(function() {
  loadCartCount(); 

});


  
});



